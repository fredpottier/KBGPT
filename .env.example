# === APIs LLM ===
# Clé API OpenAI - Obtenez la vôtre sur https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Clé API Anthropic (Claude) - Obtenez la vôtre sur https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# === Configuration des modèles (optionnel) ===
# Modèles par défaut optimisés, vous pouvez les personnaliser :
# MODEL_VISION=gpt-4o
# MODEL_METADATA=gpt-4o
# MODEL_FAST=gpt-4o-mini
# MODEL_LONG_TEXT=claude-3-5-sonnet-20241022
# MODEL_ENRICHMENT=claude-3-5-haiku-20241022

# === Qdrant Vector Store ===
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION=sap_kb

# === HuggingFace model cache ===
HF_HOME=/models

# === FastAPI backend ===
APP_PORT=8000

# === Streamlit UI ===
APP_UI_PORT=8501
BACKEND_URL=http://app:8000

# === Ngrok (optionnel, pour exposer le backend ou l'UI) ===
# Token d'authentification Ngrok - Obtenez le vôtre sur https://dashboard.ngrok.com/get-started/your-authtoken
NGROK_AUTHTOKEN=your_ngrok_token_here
# Domaine personnalisé Ngrok (optionnel) - Configurez le vôtre sur https://dashboard.ngrok.com/domains
NGROK_DOMAIN=your-domain.ngrok.app

# === Gestion du mode debug sélectif ===
# Activez le debug pour le service FastAPI (port 5678)
DEBUG_APP=false
# Activez le debug pour le worker d'ingestion (port 5679)
DEBUG_WORKER=false
